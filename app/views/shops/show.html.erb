<h1><%= @shop.name %></h1>
<%= link_to 'home', welcome_index_path %> &gt;&gt; <%= link_to 'Shops', shops_path %><br /><br />


<table border="1">
  <tr>
    <th>id</th>
    <th>title</th>
    <th>author</th>
    <th>author id</th>
    <th>quantity</th>
  </tr>

  <% @shop.stock.includes(book: :author).order("books.title").each do |stock| %>

  <tr>
    <td><%= stock.id %></td>
    <td><%= stock.book.title %></td>
    <td><%= stock.book.author.name %></td>
    <td><%= stock.book.author.id %></td>
    <td><%= stock.quantity %></td>
  </tr>

  <% end %>

</table>

