<h1>Books</h1>
<%= link_to 'home', welcome_index_path %><br /><br />
<table border="1">
  <tr>
    <th>book id</th>
    <th>title</th>
    <th>author</th>
    <th>author id</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.title %></td>
    <td><%= book.author.name %></td>
    <td><%= book.author.id %></td>
  </tr>
  <% end %>
</table>
